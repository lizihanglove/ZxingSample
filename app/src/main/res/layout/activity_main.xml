<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="website.lizihanglove.xzing.MainActivity">

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:text="生成二维码（无图标）"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/generate_logo"
        android:layout_width="wrap_content"
        android:text="生成二维码（含图标）"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/generate_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成二维码（含背景）"/>
    <Button
        android:id="@+id/generate_bg_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成二维码（含背景、含图标）"/>
    <Button
        android:id="@+id/scan"
        android:text="扫描二维码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
